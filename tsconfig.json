{
    "compilerOptions": {
      "target":"es6"
      ,"sourceMap": true
      ,"noEmitOnError": true
      ,"declaration": true
      ,"noUnusedParameters":true
      ,"moduleResolution": "node"
      ,"allowSyntheticDefaultImports":true
      ,"lib":["dom"
           ,"es2015.core"
           ,"es2015.collection"
           ,"es2015.iterable"
           ,"es2015.proxy"
           ,"es2015.reflect"
           ,"es2015.generator"
           ,"es2015.symbol"
           ,"es2015.symbol.wellknown"
           ,"es2016"
           ,"scripthost"
           ,"es2017.object"]
    },

    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "typings"
    ]
}
